				&kp CLCK   &kp A      &kp S     &kp D     &kp F      &kp G   &kp H   &kp J   &kp K      &kp L     &kp SEMI   &kp SQT    &kp RET    &kp PAGE_DOWN
				&kp LSHFT  &kp Z      &kp X     &kp C     &kp V      &kp B   &kp N   &kp M   &kp COMMA  &kp DOT   &kp FSLH   &kp RSHFT  &kp UP     &kp DELETE
           			&kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE  &mo 1   &mo 1   &mo 1   &kp LEFT   &kp DOWN  &kp RIGHT
            		>;
			sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>;
		};
		raise {
            		bindings = <
				&trans           &kp F1           &kp F2           &kp F3           &kp F4           &kp F5        &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12  &trans       &kp C_PP
